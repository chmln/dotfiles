# vi: ft=i3config
set $mod Mod1
set $accent_color #ffcf4b
floating_modifier $mod

# ============ MONITORS

output eDP-1 pos 320,1440 mode 1920x1080
output HDMI-A-1 pos 0,0 mode 2560x1440
output * bg /home/greg/.config/wallpaper fill

# ============ INPUTS

#input 1:1:AT_Translated_Set_2_keyboard {
input type:keyboard {
    repeat_delay 200
    repeat_rate 75
}

input type:pointer {
#input 6899:1:Kingsis_Peripherals_ZOWIE_Gaming_mouse {
  pointer_accel 0
}

# =========== MODES

mode "resize" {
    bindsym h left resize shrink width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px
    bindsym l resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# ============ APPEARANCE
font pango: Source Code Pro Bold 11

default_border pixel 6
for_window [class="^.*"] border pixel 6
client.focused $accent_color $accent_color #000000 $accent_color $accent_color

smart_gaps on
smart_borders on
gaps inner 10
gaps outer 5

# ============ MOVING AROUND
bindsym $mod+h focus left
bindsym $mod+k focus up
bindsym $mod+j focus down
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down
bindsym $mod+Shift+l move right

bindsym $mod+v split v

bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# ============ MISC
bindsym $mod+Shift+q kill
bindsym $mod+f fullscreen toggle
bindsym $mod+a focus parent

bindsym $mod+Shift+r reload
focus_follows_mouse no

for_window [floating] move position center

# ============ WORKSPACES
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws1

# ============ EXTERNAL KEYBINDINGS
bindsym XF86MonBrightnessUp exec --no-startup-id acpi-ease-backlight -d 0.3 inc 1000
bindsym XF86MonBrightnessDown exec --no-startup-id acpi-ease-backlight -d 0.3 dec 1000

bindsym XF86AudioRaiseVolume exec amixer set Master 3%+
bindsym XF86AudioLowerVolume exec amixer set Master 3%-
bindsym XF86AudioMute exec amixer sset Master mute

bindsym $mod+Prior exec brite +10000
bindsym $mod+Next exec brite -10000

bindsym $mod+Shift+s exec screenshot
bindsym $mod+Return exec xterm
bindsym $mod+d exec launcher

# ============ STARTUP
exec_always "sh ~/.config/sway/autostart.sh > /tmp/autostart.log"

include /etc/sway/config.d/*
